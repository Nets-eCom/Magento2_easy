<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="recurring_payment_quote_to_order"
                  instance="Nexi\Checkout\Observer\RecurringPaymentFromQuoteToOrder"/>
    </event>
    <event name="sales_order_place_before">
        <observer name="validate_cart_before_order_place" instance="Nexi\Checkout\Observer\ScheduledCartValidation"/>
    </event>
</config>
