<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="nexi" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Nexi Payments</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Title</label>
                </field>

                <field id="nexi_api_test_connect_wizard" translate="button_label" sortOrder="68" showInDefault="1"
                       showInWebsite="0" showInStore="0">
                    <label/>
                    <button_label>Test Connection</button_label>
                    <frontend_model>Nexi\Checkout\Block\Adminhtml\System\Config\TestConnection</frontend_model>
                </field>

                <field id="api_key" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>API Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="checkout_key" translate="label" type="obscure" sortOrder="31" showInDefault="1"
                       showInWebsite="1">
                    <label>Checkout Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="test_api_key" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Test API Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="test_checkout_key" translate="label" type="obscure" sortOrder="31" showInDefault="1"
                       showInWebsite="1">
                    <label>Test Checkout Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="webhook_secret" translate="label" type="obscure" sortOrder="31" showInDefault="1"
                       showInWebsite="1">
                    <label>Webhook Secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="webshop_terms_and_conditions_url" translate="label" type="text" sortOrder="40"
                       showInDefault="1" showInWebsite="1">
                    <label>Webshop Terms and Conditions URL</label>
                    <validate>required-entry</validate>
                    <comment>add URL to your Webshop Terms and Conditions site.</comment>
                </field>
                <field id="payment_terms_and_conditions_url" translate="label" type="text" sortOrder="41"
                       showInDefault="1" showInWebsite="1">
                    <label>Payment Terms and Conditions URL</label>
                    <validate>required-entry</validate>
                    <comment>add URL to your payment Terms and Conditions site.</comment>
                </field>
                <field id="integration_type" translate="label" type="select" sortOrder="50" showInDefault="1"
                       showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Integration type</label>
                    <source_model>Nexi\Checkout\Model\Config\Source\IntegrationType</source_model>
                </field>
                <field id="payment_action" translate="label" type="select" sortOrder="3" showInDefault="1"
                       showInWebsite="1" canRestore="1">
                    <label>Payment Action</label>
                    <source_model>Nexi\Checkout\Model\Config\Source\PaymentAction</source_model>
                    <comment>If set to "Authorize and Capture", the transaction will be charged automatically after the
                        reservation has been accepted.
                    </comment>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="51" showInDefault="1"
                       showInWebsite="1">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="33" showInDefault="1"
                       showInWebsite="1">
                    <label>Environment</label>
                    <source_model>Nexi\Checkout\Model\Config\Source\Environment</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
