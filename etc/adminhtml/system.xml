<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="nexi" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Nexi Payments</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Title</label>
                </field>

                <field id="nexi_api_test_connect_wizard" translate="button_label" sortOrder="68" showInDefault="1"
                       showInWebsite="0" showInStore="0">
                    <label/>
                    <button_label>Test Connection</button_label>
                    <frontend_model>Nexi\Checkout\Block\Adminhtml\System\Config\TestConnection</frontend_model>
                </field>

                <field id="secret_key" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Secret Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="checkout_key" translate="label" type="obscure" sortOrder="31" showInDefault="1"
                       showInWebsite="1">
                    <label>Checkout Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="test_secret_key" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Test Secret Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="test_checkout_key" translate="label" type="obscure" sortOrder="31" showInDefault="1"
                       showInWebsite="1">
                    <label>Test Checkout Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="webshop_terms_and_conditions_url" translate="label" type="text" sortOrder="40"
                       showInDefault="1" showInWebsite="1">
                    <label>Webshop Terms and Conditions URL</label>
                    <validate>required-entry</validate>
                    <comment>add URL to your Webshop Terms and Conditions site.</comment>
                </field>
                <field id="payment_terms_and_conditions_url" translate="label" type="text" sortOrder="41"
                       showInDefault="1" showInWebsite="1">
                    <label>Payment Terms and Conditions URL</label>
                    <validate>required-entry</validate>
                    <comment>add URL to your payment Terms and Conditions site.</comment>
                </field>
                <field id="integration_type" translate="label" type="select" sortOrder="50" showInDefault="1"
                       showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Integration type</label>
                    <source_model>Nexi\Checkout\Model\Config\Source\IntegrationType</source_model>
                </field>
                <field id="is_auto_capture" translate="label" type="select" sortOrder="5" showInDefault="1"
                       showInWebsite="1" canRestore="1">
                    <label>Is Auto Capture</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If set to "Yes", the transaction will be charged automatically after the
                        reservation has been accepted.
                    </comment>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="51" showInDefault="1"
                       showInWebsite="1">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="33" showInDefault="1"
                       showInWebsite="1">
                    <label>Environment</label>
                    <source_model>Nexi\Checkout\Model\Config\Source\Environment</source_model>
                </field>
                <group id="subscriptions" translate="label" sortOrder="800" showInDefault="1" showInStore="0" showInWebsite="0">
                    <label>Nexi: Subscriptions</label>
                    <field id="active_subscriptions" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"
                           showInStore="0" canRestore="1">
                        <config_path>nexi/subscriptions/active_subscriptions</config_path>
                        <label>Enabled Subscriptions</label>
                        <comment>Activating subscriptions feature</comment>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="notify_cron_schedule" translate="label comment" sortOrder="10" type="text"
                           showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                        <label>Subscriptions email notification schedule</label>
                        <depends>
                            <field id="active_subscriptions">1</field>
                        </depends>
                    </field>
                    <field id="bill_cron_schedule" translate="label comment" sortOrder="20" type="text"
                           showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                        <label>Subscriptions email billing schedule</label>
                        <depends>
                            <field id="active_subscriptions">1</field>
                        </depends>
                    </field>
                    <field id="warning_period" translate="label comment" sortOrder="30" type="text"
                           showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                        <label>Alert email advance period</label>
                        <comment>Controls the amount of days between notifying customer about upcoming payment and billing the payment</comment>
                        <validate>validate-digit validate-range range-0-30</validate>
                        <depends>
                            <field id="active_subscriptions">1</field>
                        </depends>
                    </field>
                    <field id="force_weekdays" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="0"
                           showInStore="0" canRestore="1">
                        <label>Force billing date to be on weekday (monday-friday)</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="active_subscriptions">1</field>
                        </depends>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
