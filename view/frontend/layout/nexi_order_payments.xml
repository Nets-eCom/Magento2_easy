<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Nexi\Checkout\Block\Order\Payments" name="nexi.order.payments" cacheable="false">
                <block class="Magento\Vault\Block\Customer\CreditCards" name="vault.cards.list" cacheable="false" template="Nexi_Checkout::cards_list.phtml">
                    <block class="Nexi\Checkout\Block\Customer\CardRenderer" name="nexi.card.renderer" template="Nexi_Checkout::customer_account/credit_card.phtml"/>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
